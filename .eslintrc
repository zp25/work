{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "__DEV__": false,
    "Template": false
  },
  "rules": {
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
    "no-cond-assign": ["error", "except-parens"]
  },
  "extends": "airbnb-base"
}
